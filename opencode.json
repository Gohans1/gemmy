{
	"$schema": "https://opencode.ai/config.json",
	"instructions": ["this_project.md", "PERSONALITY.md"],
	"agent": {
		"plan": {
			"mode": "primary",
			"description": "Agent chuyên để lập kế hoạch và quản lý task (Read-only code)",
			"prompt": "{file:./prompts/plan.txt}",
			"tools": {
				"write": false,
				"edit": false,
				"patch": false,
				"todowrite": false,
				"todoread": true,
				"bash": true
			},
			"permission": {
				"bash": {
					"bd *": "allow",
					"bv *": "allow",
					"*": "deny",
					"openskills *": "allow"
				},
				"edit": "deny"
			}
		},
		"build": {
			"mode": "primary",
			"description": "Agent chuyên để thực thi code và xây dựng dự án (Full access)",
			"prompt": "{file:./prompts/build.txt}",
			"tools": {
				"mcp_*": true,
				"todowrite": true,
				"todoread": true,
				"write": true,
				"edit": true,
				"patch": true,
				"bash": true,
				"webfetch": true
			},
			"permission": {
				"bash": "allow",
				"edit": "allow",
				"webfetch": "allow",
				"doom_loop": "allow",
				"external_directory": "allow"
			}
		}
	}
}
